<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/Img/to-do-list.png" type="image/gif" sizes="26x26">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/all.js"></script>
  </head>
  <body>
    <header>
      <h1 id="heading">TODO App</h1>
      <div class="hr-line"></div>
    </header>
    <section id="form-container">
      <form action="user/ToDolist" method="POST">
        <div class="main-container">
          <div class="description-container">
            <label id="takeip" for="takeinput">description</label>
            <input
              type="text"
              id="takeinput"
              name="list"
              placeholder="What do you need to do ?"
              required
            />
          </div>
          <div class="hr-line"></div>
          <div class="feature-container">
            <div class="choose-category">
              <label for="">category</label>
              <select id="category" name="category" required>
                <option name="category" value="choosecategory"
                  >Choose category</option
                >
                <option name="category" value="work">work</option>
                <option name="category" value="personal">personal</option>
                <option name="category" value="Office">Office</option>
              </select>
            </div>
            <div class="vr-line"></div>
            <div class="Due-Date">
              <label for="due-data">Due-Date</label>
              <input type="date" name="date" id="due-data" required />
            </div>
          </div>
          <div class="hr-line"></div>
          <div class="button-container">
            <button type="submit" class="btn add-task">
              <i class="fas fa-plus"></i> Add Task
            </button>
          </div>
        </div>
      </form>
      <div class="hr-line"></div>
    </section>
    <section id="2do-List" >
      <div id='display-main' class="display-container">
        <%for(let i of ToDoList){%>
        <div class="display-list">
          <input type="checkbox" name="<%=i._id%>" class="check" />
          <div class="display-item">
            <p><%=i.List%></p>
            <p><i class="fas fa-shopping-basket"></i><%=i.date%></p>
          </div>
          <div class="display-category">
            <div class="display-child">
              <span id="cat"><%=i.Category%></span>
            </div>
            
          </div>
        </div>
        
        <%}%>
      </div>
    </section>
    <div class="delete">
      <%if(typeof ToDoList!='undefined'){%>

      <a
         class="btn delete-btn"
        onclick="getValue()"
      >
        <i class="fas fa-trash-alt"></i> Delete Tasks</a
      >
      <%}%>
    </div>
    <script src="/js/script.js"></script>
  </body>
  
</html>
